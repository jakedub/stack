<div class="container">
  <div class="jumbotron bg-dark">
  <h1>Fake Stack</h1>
  </div>
  <div class="table-responsive">
<table class="table table-striped table-hover">
  <div class="row">
  <thead>
    <tr>
      <div class= "col-md-4">
      <th>Question Subject Line</th>
      <div class=" col-md-4 col-md-offset-9"><%= link_to 'New Question', new_question_path, :class => "btn btn-primary" %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, :class => "btn btn-warning" %>
      <%= link_to "Sign In", new_session_path, :class => "btn btn-success" %>
    </div>
    </tr>
  </thead>
</div>
  <div class ="row">
  <tbody>
    <% @question.each do |question| %>
      <tr>
        <div class="col-md-8">
        <td><strong><%=link_to question.subject, question_path(question) %></strong>
          <p>Asked by User: </p><%= question.user.name %> <br />
        <%= link_to 'Edit', edit_question_path(question),  :class => "btn btn-success btn-xs" %>
      <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' },  :class => "btn btn-danger btn-xs" %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
  </div>
</table>
<%= paginate @question %>
</div>
</div>
