<h1>Question Subject Line:
  <%=@question.subject %></h1>
<h2>Question Body:
  <%=@question.field%></h2>

<ul>
  <li>
    <% if @question.answers.count > 0 %>
      <% @question.answers.each do |a| %>
        <h3>I think it's this!:</h3>
        <%= a.field %>
          <% if a.correct == true %>
              <h1>Yes!</h1>
          <% end %>
        <%= link_to "Correct", toggle_path(a) %>
        <% end %>

    <% else %>
        <h3>Bueller?</h3>
    <% end %>
  </li>
</ul>

<%= form_for [@question, Answer.new] do |f| %>
<%= f.label :field %>
<%= f.text_area :field %>
<%= f.submit "Submit Answer"%>
<% end %>
<%= link_to 'Back', questions_path, :class => "btn btn-default" %>
<%= link_to 'Edit', edit_question_path(@question),  :class => "btn btn-default" %>
