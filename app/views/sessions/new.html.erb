<div class="container">
  <div class="row">
    <div class="jumbotron" id="signup">
      <h1>Login</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <% if current_user %>
      You are now logged in as:
      <%= current_user.email %>.
      <%= link_to "Log out", destroy_user_session_path, method: :delete %>.
    <% else %>
      You are not logged in. Need an account?
      <%= link_to "Sign up", new_user_path, :class => "btn btn-info active" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <form >
        <div class="form-group">
          <%= form_tag sessions_path do %>
          Email:
          <%= text_field_tag :email %>
          <br/>
          <br/>
          Password:
          <%= password_field_tag :password %>
          <%= submit_tag "Submit", :class => "btn btn-primary active" %>
          <% end %>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- login view -->
