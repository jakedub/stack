<div class="container">
  <div class="jumbotron">
<h1>Login</h1>
</div>

<% if current_user %>
  You are now logged in as: <%= current_user.email %>.
  <%= link_to "Log out", destroy_user_session_path, method: :delete %>.
<% else %>
  You are not logged in. Need an account? <%= link_to "Sign up", new_user_path, :class => "btn btn-default btn-lg active" %>
<% end %>

<%= form_tag sessions_path do %>
  Email: <%= text_field_tag :email %>
  Password: <%= password_field_tag :password %>
  <%= submit_tag "Submit" %>
<% end %>
</div>
<!-- login view -->
